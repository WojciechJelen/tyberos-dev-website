---
// import Hamburger from './Hamburger.astro';
import Navigation from './Navigation.astro';
import ThemeToggle from './react/ThemeToggle';

export interface NavbarItem {
  href: string;
  label: string;
}

const navbarItems = [
  {
    href: '/',
    label: 'Home',
  },
  {
    href: '/blog/',
    label: 'Blog',
  },
  {
    href: '/tags/',
    label: 'Tags',
  },
];
---

<header class="sticky top-0 z-10 py-4 transition-all">
  <div class="container mx-auto flex items-center justify-between">
    <div>Logo</div>
    <Navigation navigationItems={navbarItems} />
    <ThemeToggle client:load />
  </div>
</header>

<script>
  // This script can be added directly into your Astro component
  // inside a <script> tag, or into its own separate .js file.
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('header');
    window.addEventListener('scroll', () => {
      if (window.scrollY > 0) {
        header?.classList.add('header-scrolled');
      } else {
        header?.classList.remove('header-scrolled');
      }
    });
  });
</script>
