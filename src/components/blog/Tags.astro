---
interface Props {
  tags: string[];
}

const { tags } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag) => (
      <div class="min-w-[100px] rounded-md border-dotted bg-red-400 p-2 text-center">
        <a href={`/tags/${tag}`} class="no-underline">
          {tag}
        </a>
      </div>
    ))
  }
</div>
