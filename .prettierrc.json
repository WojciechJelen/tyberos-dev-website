  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "astroAllowShorthand": true,
  "printWidth": 80,
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "pluginSearchDirs": ["."],
  "plugins": ["prettier-plugin-astro", "prettier-plugin-tailwindcss"]
}
